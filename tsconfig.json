{
  "compilerOptions": {
    "target": "ES2020",                      // Version ECMAScript cible
    "module": "CommonJS",                    // Module utilisé par Node.js
    "outDir": "./dist",                      // Dossier de sortie des fichiers compilés
    "rootDir": "./src",                      // Dossier racine des fichiers source
    "strict": true,                          // Activer les vérifications strictes
    "esModuleInterop": true,                 // Activer l'interopérabilité ES Modules
    "skipLibCheck": true,                    // Ignorer la vérification des types dans les fichiers de bibliothèque
    "forceConsistentCasingInFileNames": true // Forcer la cohérence de la casse dans les noms de fichiers
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]     // Exclure ces dossiers de la compilation
}
